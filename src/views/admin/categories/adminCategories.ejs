<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/admin/headAdmin') %> 
</head>
<body>
    <%- include('../../partials/admin/headerAdmin') %> 

    <table>
        <caption>Lista general de categorias</caption>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th id="add"><a href="/admin/categoria/agregar">Agregar categor√≠a</a></th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
              <tr>
                <th scope="row"><%= category.id %></th>
                <td><%= category.nombre %> </td>                
                <td>
                  <a href="/admin/categoria/editar/<%= category.id  %>" class="btn btn-success">
                    <i id="edit" class="fa-solid fa-pen-to-square"></i>
                </a>
                  <form action="/admin/cateoria/<%= category.id %>?_method=DELETE" method="post">
                    <button class="erase" type="submit">
                      <i id="trash" class="fa-solid fa-trash-can"></i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>  
          </tbody>
    </table>
    <%- include('../../partials/admin/footerAdmin') %> 
</body>
</html>