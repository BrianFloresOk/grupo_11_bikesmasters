<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/adminIndex.css">
    <title>Administrador</title>
</head>
<body>
<header>
    <div class="div-logo">
        <img src="/images/logo-2.svg" alt="logo-Bikes">
    </div>
    <div class="div-titulo">
        <h2>Administrador</h2>
    </div>
</header>

    <main>


        <table>
            <caption>Lista general de productos</caption>
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Descuento</th>
                    <th scope="col">Imagen</th>
                    <th id="add"><a href="/admin/adproduct">Agregar Producto</a></th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                  <tr>
                    <th scope="row"><%- product.id %></th>
                    <td><%- product.name %></td>
                    <td><%- product.marca %></td>
                    <td><%- product.categoryId %></td>
                    <td><%- product.price %></td>
                    <td><%- product.stock %></td>
                    <td><%- product.discount %></td>
                    <td><%- product.image %></td>
                    
                    <td>
                      <a href="/admin/editproduct/<%= product.id  %>" class="btn btn-success">
                        <i class="fa-solid fa-pen-to-square"></i>
                      </a>
                      <form action="/admin/<%- product.id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger" type="submit">
                          <i class="fa-solid fa-trash-can"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>  
              </tbody>
        </table>
    </main>

    <footer>
        <div><p>Copyright-2022 Bikesmasters</p></div>
    </footer>
</body>
</html>