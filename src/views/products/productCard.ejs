<script src="https://kit.fontawesome.com/adc0842e66.js" crossorigin="anonymous"></script>
<%- include('../partials/head')  %>
    <title>Tienda</title>
</head>

<body>
     <%- include ('../partials/header') %> 
      
     <main>
       
        <table>
            <thead>
                <tr>
                    <th scope="col">Producto</th>                                             
                    <th scope="col" class="colum-price">Precio</th>
                    <th scope="col" class="colum-price">Cantidad</th>
                    <th scope="col" class="colum-price">Total</th>
                    <th scope="col" class="colum-price">Operacion</th>
                   
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                  <tr class="idtarget" target="<%= product.id %>">
                    <td><img src="../../../images/products/<%= product.image %>" alt="" id="imgProduct"><%= product.name %></td>
                    
                   
                    
                    <td class="colum-price">$<%- toThousand(product.price) %></td>
                    <td class="colum-stock"><div class="amount">
                        <label class="cantidad" for="amount">Cantidad</label>
                        <select class="cantidad" name="amount" id="">
                            <% for (let i= 1; i <= product.stock; i++) { %> 
                            <option value="<%= i %>"><%= i %></option>
                            <% } %> 
                        </select>
                        <span class="cantidad"><%= product.stock %>Disponibles</span>
                    </div></td>
                    
                    
                    
                    <td>
                     
                      
                    </td>
                  </tr>
                <% }) %>  
              </tbody>
        </table>
    </main>
              
