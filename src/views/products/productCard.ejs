    <!-- <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.sj"></script> -->
    <script src="/js/carrito.js"></script>

    <!-- <%- include('../partials/footer') %>  -->

</body>

<script src="/js/carrito.js"></script>

</html>